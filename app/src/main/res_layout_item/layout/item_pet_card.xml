<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="#F7FAFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <com.zhouyu.pet_science.views.CircleImageView
            android:id="@+id/ivPetAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/default_cat"
            app:civ_border_color="@color/cutOffLine"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tvPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="奶糖"
            android:textColor="@color/textGeneral"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPetBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="英国短毛猫"
            android:textColor="@color/textTinge"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPetAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2岁3个月"
            android:textColor="@color/textTinge"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>