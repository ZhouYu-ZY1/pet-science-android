<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/view_radius">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加宠物"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        style="@style/UserInfoLabel"
        android:layout_marginBottom="8dp"
        android:text="宠物名称"/>
    <EditText
        android:id="@+id/etPetName"
        style="@style/UserInfoEditText"
        android:hint="请输入宠物名称"
        android:background="@drawable/view_radius"
        android:backgroundTint="@color/themeColor"
        android:layout_marginBottom="16dp"/>

    <TextView
        style="@style/UserInfoLabel"
        android:layout_marginBottom="8dp"
        android:text="宠物类型"/>
    <RadioGroup
        android:id="@+id/rgPetType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/radio_group_background"
        android:layout_marginBottom="16dp">
        <RadioButton
            android:id="@+id/rbPetTypeCat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/SwitchStyleRadioButton"
            android:checked="true"
            android:text="猫咪"/>
        <RadioButton
            android:id="@+id/rbPetTypeDog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/SwitchStyleRadioButton"
            android:text="狗狗"/>
        <RadioButton
            android:id="@+id/rbPetTypeOther"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/SwitchStyleRadioButton"
            android:text="其他"/>
    </RadioGroup>

    <TextView
        style="@style/UserInfoLabel"
        android:layout_marginBottom="8dp"
        android:text="品种"/>
    <EditText
        android:id="@+id/etPetBreed"
        style="@style/UserInfoEditText"
        android:hint="请输入宠物品种"
        android:background="@drawable/view_radius"
        android:backgroundTint="@color/themeColor"
        android:layout_marginBottom="16dp"/>

    <TextView
        style="@style/UserInfoLabel"
        android:layout_marginBottom="8dp"
        android:text="年龄"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/view_radius"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/etPetAgeYear"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:hint="0"
            android:gravity="center"
            android:background="@drawable/view_radius"
            android:backgroundTint="@color/themeColor"
            style="@style/UserInfoEditText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:layout_marginHorizontal="10dp"/>
        <EditText
            android:id="@+id/etPetAgeMonth"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:hint="0"
            android:background="@drawable/view_radius"
            android:backgroundTint="@color/themeColor"
            android:gravity="center"
            style="@style/UserInfoEditText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- 添加确认和取消按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textTinge"
            android:background="@drawable/view_radius"
            android:backgroundTint="@color/themeColor"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:background="@drawable/view_radius"
            android:backgroundTint="@color/Theme"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>