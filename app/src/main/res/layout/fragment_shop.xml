<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/viewColor">

    <!-- 搜索栏 -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/viewColor"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/view_radius"
            android:backgroundTint="@color/themeColor"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search_icon"
                android:tint="@color/textTinge"
                tools:ignore="UseAppTint" />

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:hint="搜索商品"
                android:textColorHint="@color/textTinge"
                android:textColor="@color/textGeneral"
                android:textSize="14sp"
                android:singleLine="true"
                android:imeOptions="actionSearch" />
        </LinearLayout>
    </LinearLayout>

    <!-- 分类导航栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/viewColor">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewColor"
            app:tabRippleColor="@android:color/transparent"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            app:tabMaxWidth="50dp"
            app:tabMinWidth="40dp"
            app:tabIndicatorColor="@color/Theme"
            app:tabSelectedTextColor="@color/Theme"
            app:tabTextColor="@color/textGeneral"
            app:tabIndicatorHeight="2dp"
            app:tabPaddingStart="2dp"
            app:tabPaddingEnd="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/fade_right" />

            <ImageView
                android:id="@+id/category_button"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/move_item_icon"
                android:background="?attr/selectableItemBackground"
                android:tint="@color/textGeneral"
                tools:ignore="UseAppTint" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutOffLine" />

    <!-- ViewPager2容器 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

</LinearLayout>