<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e090909"
    tools:ignore="HardcodedText,SpUsage">
    <com.zhouyu.pet_science.views.CardView
        android:id="@+id/content_view"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/viewColor"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:view_radius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:padding="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="添加到歌单"
                            android:textSize="15sp"
                            android:textColor="@color/textGeneral"/>

                    </LinearLayout>
                    <ScrollView
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/song_list_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loading_animate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <com.wang.avi.AVLoadingIndicatorView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:indicatorName="@string/loading_animation"
                        app:indicatorColor="@color/Theme"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加载中"
                        android:textColor="@color/textGeneral"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qq_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:visibility="gone">
                    <TextView
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="歌单获取失败，请确认QQ号是否输入正确（可在左侧侧滑栏清除绿源账号），如账号正确请至 Q音APP -> 个人主页 -> 右上角更多按钮 -> 访问设置 中检查个人主页和歌单的访问开关是否打开"
                        android:textColor="@color/textGeneral"
                        android:textSize="14sp"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </com.zhouyu.pet_science.views.CardView>
</RelativeLayout>